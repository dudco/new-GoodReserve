<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.dudco.goodreserve.RegisterActivity"
        android:paddingTop="30dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/bg_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 계정으로 Rèrant를 시작합니다"
            android:textSize="17sp"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a3a3a3"/>
        <EditText
            android:id="@+id/reg_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_login"
            android:hint="이메일 입력"
            android:padding="10dp"
            android:layout_marginBottom="17dp"/>

        <EditText
            android:id="@+id/reg_edit_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_login"
            android:hint="비밀번호 입력"
            android:padding="10dp"
            android:layout_marginBottom="17dp"/>

        <EditText
            android:id="@+id/reg_edit_repass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_login"
            android:hint="비밀번호 재입력"
            android:padding="10dp"
            android:layout_marginBottom="17dp"/>

        <EditText
            android:id="@+id/reg_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_login"
            android:hint="이름"
            android:padding="10dp"
            android:layout_marginBottom="17dp"/>

        <EditText
            android:id="@+id/reg_edit_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_login"
            android:hint="전화번호 입력"
            android:padding="10dp"
            android:layout_marginBottom="17dp"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_reg"
            android:text="이 정보로 가입하기"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    </LinearLayout>
</layout>